            android:text=""
            android:textSize="23sp"
            android:onClick="click"
            />
        <Button
            android:layout_marginStart="11dp"
            android:id="@+id/btn2"
            android:text=""
            android:textSize="23sp"
            android:onClick="click"/>
        <Button
            android:layout_marginStart="11dp"
            android:id="@+id/btn3"
            android:text=""
