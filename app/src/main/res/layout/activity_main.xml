            android:onClick="click"/>
        <Button
            android:id="@+id/btn4"
            android:text=""
            android:textSize="23sp"
            android:onClick="click"/>
        <Button
            android:layout_marginStart="11dp"
            android:id="@+id/btn5"
            android:text=""
            android:textSize="23sp"
            android:onClick="click"/>
        <Button
            android:layout_marginStart="11dp"
            android:id="@+id/btn6"
            android:text=""
            android:textSize="23sp"
            android:onClick="click"/>
        <Button
            android:id="@+id/btn7"
            android:text=""
            android:textSize="23sp"
            android:onClick="click"/>
        <Button
            android:layout_marginStart="11dp"
            android:id="@+id/btn8"
            android:text=""
            android:textSize="23sp"
            android:onClick="click"/>

        <Button
            android:layout_marginStart="11dp"
            android:id="@+id/btn9"
            android:text=""
            android:textSize="23sp"
            android:onClick="click"/>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTART"
        app:backgroundTint="@color/teal_200"
        android:textSize="23sp"
        android:id="@+id/restart"/>



</LinearLayout>